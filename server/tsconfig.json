{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "typeRoots": ["node"],
        "sourceMap": true,
        "outDir": "../build-server",
        "rootDir": "./",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "paths": {
            "*": ["node_modules/*", "types/*"]
        }
    },
    "include": ["./"]
}
